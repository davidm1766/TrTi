<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="sk.listok.zssk.zssklistok.MainActivity"
    tools:showIn="@layout/activity_main"
    android:weightSum="2"
    android:orientation="vertical">


    <Button
        android:padding="50dp"
        android:textSize="24dp"
        android:gravity="center"
        android:text="@string/BUY_TICKET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/buynewticket"
        android:id="@+id/buttonStartShopping"
        android:layout_weight="1"
        android:background="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />


    <Button
        android:padding="50dp"
        android:textSize="24dp"
        android:text="@string/MY_TICKET"
        android:background="#ff684A"
        android:drawableLeft="@drawable/ticketicon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/buttonMyTicket"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />



</android.support.v7.widget.LinearLayoutCompat>