<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_select_passenger_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sk.listok.zssk.zssklistok.SelectPassengerInfoActivity">

    <Button
        android:text="Dokončiť nákup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button5"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp"/>

    <ScrollView
        android:id="@+id/scrollContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/button5">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">
            <TextView
                android:text="e-mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:textColor="#000000"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:id="@+id/editTextEmail"
                android:text="\@"
                />



            <TextView
                android:text="Meno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:id="@+id/textView9"
                android:textColor="#000000"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Ján"
                android:ems="10"
                android:layout_marginTop="11dp"
                android:id="@+id/editTextName"

                />

            <TextView
                android:text="Priezvisko"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:id="@+id/textView10"
                android:textColor="#000000"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Kováč"
                android:ems="10"
                android:layout_marginTop="10dp"
                android:id="@+id/editTextSurname"
                />

            <TextView
                android:text="ID preukaz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:id="@+id/textView11"
                android:textColor="#000000"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="AB123456"
                android:ems="10"
                android:layout_marginTop="12dp"
                android:id="@+id/editTextIDcard"
                />

            <TextView
                android:text="Registračné číslo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:id="@+id/textView12"
                android:textColor="#000000"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="1234567"
                android:ems="10"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="20dp"
                android:id="@+id/editTextRegNumber"
                />

            <TextView
                android:text="Details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewFinalDetails"
                android:layout_marginBottom="12dp"
                 />

            <TextView
                android:text="Price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewPrice"
                android:layout_alignBaseline="@+id/textViewFinalDetails"
                android:layout_alignBottom="@+id/textViewFinalDetails"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="12dp" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
